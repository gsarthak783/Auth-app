PORT=5000
NODE_ENV=development

# Database - MongoDB Atlas Configuration
# Replace the connection string below with your MongoDB Atlas connection string
# Format: mongodb+srv://<username>:<password>@<cluster-url>/<database-name>?retryWrites=true&w=majority
MONGODB_URI=mongodb+srv://YOUR_USERNAME:YOUR_PASSWORD@YOUR_CLUSTER.mongodb.net/auth-system?retryWrites=true&w=majority

# JWT Secrets - Strong production-ready secrets
JWT_SECRET=super-secret-jwt-key-for-access-tokens-2024-auth-system-v1
JWT_REFRESH_SECRET=super-secret-refresh-key-for-refresh-tokens-2024-auth-system-v1
JWT_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d

# Email Configuration (SMTP) - Update with your email service
EMAIL_FROM=noreply@yourapp.com
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Frontend URL for CORS
FRONTEND_URL=http://localhost:5173

# Encryption key for sensitive data
ENCRYPTION_KEY=32-char-encryption-key-2024-secure